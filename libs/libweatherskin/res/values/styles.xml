<resources>

    <style name="Theme.Dialog" parent="@android:style/Theme.Dialog">
    </style>

    <style name="Weather">
        <item name="android:singleLine">true</item>
    </style>

    <style name="Weather.CurrentTemp" parent="Weather">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Weather.Forecast" parent="Weather">
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="Weather.Condition" parent="Weather.Forecast">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="WeatherInfo" parent="@android:style/TextAppearance">
    </style>

    <style name="WeatherInfo.Location" parent="@android:style/TextAppearance.Medium">
        <!--<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>-->
    </style>

    <style name="WeatherInfo.UpdateTime" parent="@android:style/TextAppearance.Small">
        <!--<item name="android:textAppearance">?android:attr/textAppearanceSmall</item>-->
    </style>

    <style name="WeatherInfo.Condition" parent="@android:style/TextAppearance.Large">
        <!--<item name="android:textAppearance">?android:attr/textAppearanceLarge</item>-->
    </style>

    <style name="WeatherInfo.ConditionDetails" parent="@android:style/TextAppearance.Medium">
        <!--<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>-->
    </style>

    <style name="WeatherInfo.CurrentTemp" parent="@android:style/TextAppearance.Large">
        <!--<item name="android:textAppearance">?android:attr/textAppearanceLarge</item>-->
        <item name="android:textSize">25sp</item>
    </style>

    <style name="WeatherInfo.AltTemp" parent="WeatherInfo">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

</resources>