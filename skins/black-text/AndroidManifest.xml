<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="ru.gelin.android.weather.notification.skin.blacktext"
      android:versionCode="1"
      android:versionName="0.2-beta1">
    

    <application android:icon="@drawable/icon" android:label="@string/app_name">

		<activity android:name=".WeatherInfoActivity"
                  android:label="@string/weather"
                  android:theme="@android:style/Theme.Dialog"
                  />

        <receiver android:name=".SkinWeatherNotificationReceiver">
            <intent-filter>
                <action android:name="ru.gelin.android.weather.notification.ACTION_WEATHER_UPDATE"/>
            </intent-filter>
        </receiver>

    </application>
    
    <uses-sdk android:minSdkVersion="3" android:targetSdkVersion="8"/>
    <supports-screens/>
    
</manifest>