<project name="weather-notification-android-upload" default="all">

    <property file="local.properties"/>
    <property file="upload.credentials.properties"/>
    <xmlproperty file="AndroidManifest.xml"/>

    <taskdef classname="net.bluecow.googlecode.ant.GoogleCodeUploadTask" name="gcupload"
	classpath="${sdk.dir}/ant-googlecode-0.0.2.jar"/>

    <target name="all" depends="debug, release"/>

    <target name="debug" depends="core-debug, black-text-skin-debug, white-text-skin-debug, black-text-plus-skin-debug, white-text-plus-skin-debug"
	    description="Upload debug .apk files"/>

    <target name="core-debug">

	<gcupload 
	    username="${gc.username}"
	    password="${gc.password}"
    	    projectname="weather-notification-android" 
    	    filename="bin/weather-notification-android-debug.apk" 
    	    targetfilename="weather-notification-android-${manifest(android:versionName)}-debug.apk"
    	    summary="Latest Core App build (${manifest(android:versionName)}), signed by debug key)"
    	    labels="Type-Package, OpSys-Android_1.5" />

	<copy file="bin/weather-notification-android-debug.apk"
	    todir="/home/gelin/Dropbox/android@gelin"/>
    
    </target>
    
    <target name="black-text-skin-debug">

	<gcupload 
	    username="${gc.username}"
	    password="${gc.password}"
    	    projectname="weather-notification-android" 
    	    filename="skins/black-text/bin/weather-notification-skin-black-text-debug.apk" 
    	    targetfilename="weather-notification-skin-black-text-${manifest(android:versionName)}-debug.apk"
    	    summary="Latest Black Text Skin build (${manifest(android:versionName)}), signed by debug key)"
    	    labels="Type-Package, OpSys-Android_1.5" />

	<copy file="skins/black-text/bin/weather-notification-skin-black-text-debug.apk"
	    todir="/home/gelin/Dropbox/android@gelin"/>
    
